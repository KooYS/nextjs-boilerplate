{
    "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
    "ignoreFiles": [
        "src/@types/*"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": ["extends"]
        }
      ],
      "block-no-empty": null,
      "unit-whitelist": ["%", "s", "px", "rem"]
    }
  }